<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">
    
    <SolidColorBrush x:Key="defaultBackgroundBrush"
                     po:Freeze="True"
                     Color="#3A3428"/>

    <SolidColorBrush x:Key="defaultForegoundBrush"
                     po:Freeze="True"
                     Color="#EAD6A1"/>

    <Pen x:Key="defaultForegroundPen"
         po:Freeze="True"
         Brush="{StaticResource defaultForegoundBrush}"/>

    <SolidColorBrush x:Key="darkerForegoundBrush"
                     po:Freeze="True"
                     Color="#8C8060"/>
</ResourceDictionary>